{
    "family": "nithin-strapi-final-v12-task",
    "networkMode": "awsvpc",
    "executionRoleArn": "arn:aws:iam::811738710312:role/ecs_fargate_taskRole",
    "containerDefinitions": [
        {
            "name": "strapi",
            "image": "<IMAGE1_NAME>",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 1337,
                    "hostPort": 1337,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                { "name": "NODE_ENV", "value": "production" },
                { "name": "DATABASE_HOST", "value": "nithin-strapi-final-v12-db.cibg8qw2kouc.us-east-1.rds.amazonaws.com" },
                { "name": "DATABASE_PORT", "value": "5432" },
                { "name": "DATABASE_NAME", "value": "strapi" },
                { "name": "DATABASE_USERNAME", "value": "postgres" },
                { "name": "DATABASE_PASSWORD", "value": "YourSecurePassword123!" }
            ]
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "256",
    "memory": "512"
}